<div data-controller="navbar">
  <div class="nav-comp">
    <div class="booking_bar" data-navbar-target="upbar">
      <p class="opacity" data-navbar-target="textbar"> For booking or any questions, please contact us  <a href="tel:+30 693 471 3555"> +30 693 471 3555 </a> <p>
    </div>
    <div class="<%= "home-page" if params[:locale].nil? || current_page?(root_path(locale: params[:locale])) %>">
      <div class="navbar navbar-expand-sm navbar-light navbar-lewagon" data-navbar-target="navigation">
        <div class="navbar-lewagon-flex">
          <%= link_to t('.services'), services_path, class: "navbar-brand padding margin" %>
          <%= link_to t('.products'), products_path, class: "navbar-brand padding" %>
          <%= link_to t('.jewelries'), jewelries_path, class: "navbar-brand padding" %>
        </div>
        <%= image_tag "TONIC_logo.png", class: "logo" %>
        <div class="navbar-lewagon-flex-two">
          <%= link_to t('.about'), root_path, class: "navbar-brand padding" %>
          <%= link_to t('.contact'), contacts_path, class: "navbar-brand padding" %>
            <% if params[:locale] == "en" || params[:locale].nil? %>
              <%= link_to root_path(locale: "gr"),  class:"greek" do %>
                <% image_tag("greek_flag", width: 28) %>
              <% end %>
            <% else %>
              <%= link_to root_path(locale: "en"),  class:"english" do %>
                <% image_tag("english_flag", width: 28) %>
              <% end %>
            <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="collapse navbar-collapse" id="navbarSupportedContent nav-tel">
    <div class="booking_bar" data-navbar-target="upbar">
      <p class="opacity" data-navbar-target="textbar"> For booking or any questions, please contact us  <a href="tel:+30 693 471 3555"> +30 693 471 3555 </a> <p>
    </div>
    <div class="<%= "home-page" if params[:locale].nil? || current_page?(root_path(locale: params[:locale])) %>">
      <div class="flex">
      <div style="width: 30px">
        <% if params[:locale] == "en" || params[:locale].nil? %>
          <%= link_to root_path(locale: "gr"),  class:"greek" do %>
          <% image_tag("greek_flag", width: 28) %>
          <% end %>
        <% else %>
          <%= link_to root_path(locale: "en"),  class:"english" do %>
            <% image_tag("english_flag", width: 28) %>
          <% end %>
        <% end %>
      </div>
      <div>
        <%= image_tag "TONIC_logo.png", class: "logo" %>
      </div>
      <div>
        <ul class="navbar-nav me-auto">
          <li class="nav-item dropdown">
            <%= image_tag "menu.png", class: "dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <div data-navbar-target="navigation">
                <div class="navbar-lewagon-flex">
                  <%= link_to t('.services'), services_path, class: "navbar-brand padding margin dropdown-items" %>
                  <%= link_to t('.products'), products_path, class: "navbar-brand padding dropdown-items" %>
                  <%= link_to t('.jewelries'), jewelries_path, class: "navbar-brand padding dropdown-items" %>
                </div>
                <div class="navbar-lewagon-flex padd">
                  <%= link_to t('.about'), root_path, class: "navbar-brand padding" %>
                  <%= link_to t('.contact'), contacts_path, class: "navbar-brand padding" %>
                </div>
              </div>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
