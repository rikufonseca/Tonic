<%= form_with model: @message do |form| %>
      <%= form.fields_for :contact do |contact_form| %>
        <%= contact_form.label :first_name, "First name*", required: true %>
        <%= contact_form.text_field :first_name %>
        <%= contact_form.label :last_name, "Last name *", required: true %>
        <%= contact_form.text_field :last_name %>
        <%= contact_form.label :email, "Email *" %>
        <%= contact_form.text_field :email, required: true %>
        <%= contact_form.label :phone_number, "Phone number" %>
        <%= contact_form.text_field :phone_number %>
      <% end %>
      <%= form.label :categories, "Select a category *", class: "cats" %>
      <div class="categories" data-controller="new-messages">
        <%= form.collection_check_boxes(:categories, @categories, :to_s, :to_s, include_hidden: false, required: true) do |b| %>
          <%= b.label class:"label-checkbox", data: {new_messages_target: "categories"}, action: "change->new-messages#select" do %>
            <%= b.check_box + b.text %>
          <%end%>
        <% end %>
      </div>
      <%= form.label :content, "Your message *" %>
      <%= form.text_area :content, required: true %>
      <div class="submit">
        <%= form.submit "Envoyer", class: "envoyer" %>
      </div>
    <% end %>
